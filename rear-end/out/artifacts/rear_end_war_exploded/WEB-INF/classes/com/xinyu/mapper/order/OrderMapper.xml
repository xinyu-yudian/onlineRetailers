<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.xinyu.mapper.order.OrderMapper">

    <update id="updateAddress" parameterType="com.xinyu.entity.order.Order">
        update `order` set address = #{address} where id = #{id}
    </update>

    <select id="selOrders" parameterType="com.xinyu.entity.order.Order" resultType="com.xinyu.entity.order.Order">
        select
           id,
           order_number orderNumber,
           user_id userId,
           pay_status payStatus,
           is_send isSend,
           organ,
           company,
           invoice,
           address,
           place_time placeTime,
           order_price orderPrice
        from
            `order`
        where 1=1
        <if test="orderNumber != null and orderNumber != ''">
             and order_number =  #{orderNumber}
        </if>
    </select>

</mapper>