/* pages/backPages/cart/cart.wxss */
.goodsItem{
   display: flex;
   flex-direction: row;
   box-shadow: 0 0 0.5rem rgba(166, 173, 177, 0.733);
   margin: 10px;
   border-radius: 5px;
   text-align: center;
   max-height: 8rem;
   min-height: 8rem;
}
.checkBtn{
  margin: 15% 0.5rem;
}
.goodsIcon{
   max-width: 5rem;
   min-width: 5rem;
   max-height: 5rem;
   min-height: 5rem;
   margin-top: 5%;
}
.goodsInfo{
  display:flex;
  flex-flow: column; 
  justify-content: space-between;
  margin: 5px;
}
.goodsName{
  margin: 5px;
  min-height: 2.2rem;
  overflow: hidden;
}
.goodsNumber{
  display: flex;
  justify-content: space-between;
}
.priceAll{
  display: flex;
  flex-direction: column;
  font-size: 10px;
  margin-top: 5px;
  min-width: 7rem;
  max-width: 7rem;
}
.numberBtn{
  display: flex;
  flex-direction: row;
  margin-bottom: 5px;
}
.sub{
  background-repeat: no-repeat;
  background-position: 5px;
  background-size: 12px 12px;

  width: 2rem;
  height: 1.5rem;
  margin: 5px;
}
.add{
  background-repeat: no-repeat;
  background-position: 5px;
  background-size: 12px 12px;
  width: 2rem;
  height: 1.5rem;
  margin: 5px;
}
.numberText{
  background-color: rgb(230, 223, 223);
  color: rgb(240, 165, 66);
  padding: 5px 20px;
  border-radius: 5px;
  max-width: 20px;
  min-width: 20px;
  max-height: 20px;
  min-height: 20px;
  text-align: center;
  line-height: 20px;
  margin: 0;
  margin-top: 2px;
}
.goodsPrice{
  color: red;
  margin-top: 5px;
  margin-right: 2rem;
}

.foot{
  box-shadow: 0.2rem 0 0.5rem rgba(166, 173, 177, 0.733);
  position: absolute;
  bottom: 1%;
  width: 100%;
  padding: 10px;
  display: flex;
  flex-direction: row;
}
.footLeft{
  display: flex;
  justify-content: space-between;
  width: 69%;
  margin-top: 10px;
}
.checkAll{
  position: relative;
  bottom: 3px;
  border-right: 0.3px solid;
  padding: 5px;
}
.checkAllText{
  position: relative;
  bottom: -2px;
}
.cartSumPriceText{
  font-size: 15px;

}
.cartSumPrice{
   font-size: 20px;
   color: red;
   margin-top: 5px;
   margin-right: 2rem;
}
.footRight{
  padding: 10px;
  background-color: red;
  color: white;
  max-width: 5rem;
  min-width: 5rem;
  max-height: 1.2rem;
  min-height: 1.2rem;
  border-radius: 2rem;
  text-align: center;
  margin-top: 4px;
}