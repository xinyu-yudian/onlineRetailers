/* pages/backPages/goods/goodsDetails/goodsDetails.wxss */
.under_line{
  width: 100%;
  border-top: 1rpx solid #efefef;
  text-align: center;
  font-size: 20px;
  font-weight: bold;
  box-shadow: 0 0 10px rgba(201, 208, 209, 0.733);
  padding: 1rem;
}
.scrollY {
  width: 200rpx;
  position: fixed;
  left: 0;
  top: 4rem;
  border-right: 1rpx solid #efefef;
}
 
.left {
  border-top: 1rpx solid #efefef;
  border-right: 1rpx solid #efefef;
  margin-top: 1rem;
}
.categoryTitle{
   padding: 0.5rem;
}
 
.text-style {
  width: 200rpx;
  height: 100rpx;
  line-height: 100rpx;
  text-align: center;
  font-size: 25rpx;
  font-family: PingFangSC-Semibold;
  color: rgba(51, 51, 51, 1);
}
.clear{
   padding: 0.5rem;
}
 
.active1 {
  color: #85d1fd;
}
 
.active {
  display: block;
  width: 50rpx;
  height: 6rpx;
  background: #85d1fd;
  position: relative;
  left: 75rpx;
  bottom: 30rpx;
}

.right{
   float: right;
   margin: 0.5rem 0.05rem;
   min-width: 18rem;
   max-width: 16.5rem;
}


.goodsItem{
  display: flex;
  flex-direction: row;
  flex-wrap: nowrap;
  box-shadow: 0 0 0.5rem rgba(210, 214, 216, 0.733);
  margin: 0.5rem;
}

.proGoodsIcon{
  min-width: 3rem;
  max-width: 3rem;
  height: 3rem;
  margin: 0.5rem 0.1rem;
  padding: 0.5rem;
  border-radius: 50%;
}

.proGoodsText{
  font-size: 0.8rem;
  margin: 1rem 0rem;
  max-width: 10rem;
  max-height: 3rem;
  overflow: hidden;
}

.proGoodsPrice{
   margin: 1.5rem 0.5rem;
   color: aliceblue;
   background-color: red;
   border-radius: 3px 10px;
   text-align: center;
   line-height: 2rem;
   min-width: 3rem;
   max-width: 3rem;
   min-height: 2rem;
   max-height: 2rem;
   font-size: 0.8rem;
}