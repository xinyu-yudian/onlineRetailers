/* pages/backPages/order/order.wxss */
/* 页面背景颜色为 #f2f2f2 */
page {
  background: #f2f2f2;
}

/* 设置导航外层样式，绝对定位设置为fixed。z-index: 999999; 能够将 nav 布局层级结果放在最上层，避免被下层view遮挡*/
.nav {
  position: fixed;
  background: white;
  color: #353535;
  z-index: 999999;
  max-height: 94rpx;
  width: 100%;
}

/* 设置为水平布局，文字居中显示 */
.flex {
  display: flex;
  text-align: center;
  flex-direction: row;
}

/* 设置选中项的底部边框 */
.nav .nav-item.current {
  border-bottom: 4rpx solid;
}

/* 设置选中项的文字颜色和大小 */
.text-selected {
  color: #2196F3;
  font-size: 34rpx;
}

/* 设置各项的高度、边距，同时设置flex=1，表示各项平分 */
.nav .nav-item {
  height: 90rpx;
  display: inline-block;
  line-height: 90rpx;
  margin: 0 10rpx;
  padding: 0 20rpx;
  flex: 1;
}

.orderBody{
    position: absolute;
    top: 2.5rem;
    margin: 1rem;
    min-width: 100%;
    max-width: 100%;
}
.orderItem{
  margin: 1rem -0.3rem;
  box-shadow: 0 0 0.5rem rgba(210, 214, 216, 0.733);
  display: flex;
  flex-direction: column;
  padding: 0.5rem;
  min-width: 90%;
  max-width: 90%;
  background-color: rgb(247, 248, 250);
}

.head{
   border-bottom: 0.3px solid rgb(156, 150, 150);
   padding: 0.3rem 1rem;
   display: flex;
   justify-content: space-between;
}
.zhong{
  margin: 1rem;
  display: flex;
  flex-direction: column;
}
.foot{
  border-top: 0.3px solid rgb(156, 150, 150);
  padding: 0.3rem 1rem;
  display: flex;
  justify-content: space-between;
}

.price{
   color: rgb(241, 11, 11);
}

.toDetail{
  color: rgb(22, 149, 223);
}

.orderNum{
   display: flex;
   flex-direction: column;
}
.OrderText{
  font-size: 12px;
  margin-top: 3px;
  color: #f3aa21;
}